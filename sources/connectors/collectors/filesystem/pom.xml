<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>pcu-collectors-parent</artifactId>
		<groupId>org.pcu-consortium.pcu</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<artifactId>pcu-collectors-filesystem</artifactId>
	<packaging>bundle</packaging>

	<name>PCU Collector Filesystem</name>
	<description>PCU Collector Filesystem</description>


	<dependencies>

		<!-- spring : -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
		</dependency>

		<!-- collectors : -->
		<dependency>
			<groupId>com.norconex.collectors</groupId>
			<artifactId>norconex-collector-filesystem</artifactId>
			<version>2.8.0</version>

			<!-- Excluded because they contains classes in default package which is 
				forbidden by OSGI maven-bundle-plugin > Embed-Dependency/Embed-Transitive -->
			<exclusions>
				<exclusion>
					<groupId>org.luaj</groupId>
					<artifactId>luaj-jse</artifactId>
				</exclusion>
				<exclusion>
					<groupId>edu.ucar</groupId>
					<artifactId>jj2000</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<!-- mondatory ? -->
		<dependency>
			<groupId>edu.ucar</groupId>
			<artifactId>jj2000</artifactId>
			<version>5.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.luaj</groupId>
			<artifactId>luaj-jse</artifactId>
			<version>3.0.1</version>
			<scope>provided</scope>
		</dependency>



		<!-- PCU : -->
		<dependency>
			<groupId>org.pcu-consortium.pcu</groupId>
			<artifactId>pcu-indexer-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.pcu-consortium.pcu</groupId>
			<artifactId>pcu-collectors-api</artifactId>
		</dependency>

		<!-- osgi : -->
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<scope>provided</scope>
		</dependency>

	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-luaj-jse</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.luaj</groupId>
									<artifactId>luaj-jse</artifactId>
									<version>3.0.1</version>
									<outputDirectory>
										${project.build.directory}/luaj-jse
									</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>unpack-jj2000</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>edu.ucar</groupId>
									<artifactId>jj2000</artifactId>
									<version>5.2</version>
									<outputDirectory>
										${project.build.directory}/jj2000
									</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<!-- Rewrite because they contains classes in default package which is 
					forbidden by OSGI maven-bundle-plugin > Embed-Dependency/Embed-Transitive -->
				<executions>
					<execution>
						<!-- Remove classes from the root package and re jar -->
						<id>fix-luaj-jse</id>
						<phase>process-classes</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete>
									<fileset dir="${project.build.directory}/luaj-jse"
										includes="*.class" />
								</delete>
								<jar destfile="${project.build.directory}/luaj-jse-3.0.1-fixed.jar">
									<fileset dir="${project.build.directory}/luaj-jse" />
								</jar>
							</tasks>
						</configuration>
					</execution>
					<execution>
						<!-- Remove classes from the root package and re jar -->
						<id>fix-jj2000</id>
						<phase>process-classes</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete>
									<fileset dir="${project.build.directory}/jj2000"
										includes="*.class" />
								</delete>
								<jar destfile="${project.build.directory}/jj2000-5.2-fixed.jar">
									<fileset dir="${project.build.directory}/jj2000" />
								</jar>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.artifactId}</Bundle-Name>
						<Bundle-Version>${project.version}</Bundle-Version>
						<!-- Use rewittent jar without classes in default package -->
						<Bundle-ClassPath>.,{maven-dependencies},jj2000-5.2-fixed.jar,luaj-jse-3.0.1-fixed.jar</Bundle-ClassPath>
						<Include-Resource>{maven-resources},{maven-dependencies},${project.build.directory}/jj2000-5.2-fixed.jar,${project.build.directory}/luaj-jse-3.0.1-fixed.jar</Include-Resource>
						<Exclude-Resource>${project.build.directory}/jj2000-5.2.jar,${project.build.directory}/luaj-jse-3.0.1.jar</Exclude-Resource>

						<Bundle-Activator>org.pcu.connectors.collectors.filesystem.PcuFilesystemCollector</Bundle-Activator>
						<!-- <Import-Package>com.norconex.collectors</Import-Package> -->
						<Import-Package>*;resolution:=optional</Import-Package>
						<Export-Package>org.pcu.connectors.collectors.filesystem</Export-Package>
						<Embed-Dependency>*;scope=compile|runtime;inline=false;artifactId=!org.osgi.framework|!org.pcu.connectors.collectors.api|!edu.ucar</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>

