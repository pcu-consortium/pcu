<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>pcu-collectors-parent</artifactId>
		<groupId>org.pcu-consortium.pcu</groupId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>
	<artifactId>pcu-collectors-filesystem</artifactId>
	<packaging>bundle</packaging>

	<name>PCU Collector Filesystem</name>
	<description>PCU Collector Filesystem</description>


	<dependencies>

		<!-- spring : -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
		</dependency>

		<!-- PCU : -->
		<dependency>
			<groupId>org.pcu-consortium.pcu</groupId>
			<artifactId>pcu-collectors-norconex</artifactId>
		</dependency>
		<dependency>
			<groupId>org.pcu-consortium.pcu</groupId>
			<artifactId>pcu-platform-client</artifactId>
		</dependency>
		<dependency>
			<groupId>org.pcu-consortium.pcu</groupId>
			<artifactId>pcu-collectors-api</artifactId>
		</dependency>

		<!-- osgi : -->
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<scope>provided</scope>
		</dependency>


		<!-- Transitive pcu-plateform-client dependency -->
		<dependency>
			<groupId>io.github.openfeign</groupId>
			<artifactId>feign-core</artifactId>
			<version>9.7.0</version>
		</dependency>

		<dependency>
			<groupId>io.github.openfeign</groupId>
			<artifactId>feign-gson</artifactId>
			<version>9.7.0</version>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>

				<configuration>
					<instructions>
						<_noee>true</_noee>
						<Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.artifactId}</Bundle-Name>
						<Bundle-Version>${project.version}</Bundle-Version>
						<Import-Package>org.osgi.framework,org.pcu.connectors.collectors.api,org.slf4j</Import-Package>
						<Export-Service>org.pcu.connectors.collectors.api.PcuCollector</Export-Service>
						<Bundle-Activator>org.pcu.connectors.collectors.filesystem.PcuFilesystemCollector</Bundle-Activator>
						<!-- 
						<Embed-Dependency>
							pcu-platform-client;scope=compile|runtime,
							spring-code;scope=compile|runtime
						</Embed-Dependency>
						 -->
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>

