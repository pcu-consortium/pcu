<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>pcu-collectors-parent</artifactId>
		<groupId>org.pcu-consortium.pcu</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<artifactId>pcu-collectors-norconex</artifactId>
	<packaging>bundle</packaging>

	<name>PCU Collector Norconex</name>
	<description>PCU Collector Norconex</description>


	<dependencies>


		<!-- collectors : -->
		<dependency>
			<groupId>com.norconex.collectors</groupId>
			<artifactId>norconex-collector-filesystem</artifactId>
			<version>2.8.0</version>

			<exclusions>
				<exclusion>
					<!-- We will get these classes somewhere else -->
					<groupId>de.l3s.boilerpipe</groupId>
					<artifactId>boilerpipe</artifactId>
				</exclusion>
				<exclusion>
					<!-- edu.ucar:jj2000:5.3 not available in standard repos -->
					<groupId>edu.ucar</groupId>
					<artifactId>jj2000</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.norconex.collectors</groupId>
					<artifactId>norconex-importer</artifactId>
				</exclusion>
			</exclusions>
		</dependency>


		<dependency>
			<groupId>com.norconex.collectors</groupId>
			<artifactId>norconex-importer</artifactId>
			<version>2.8.0</version>
			<exclusions>
				<exclusion>
					<!-- We will get these classes somewhere else -->
					<groupId>de.l3s.boilerpipe</groupId>
					<artifactId>boilerpipe</artifactId>
				</exclusion>
				<exclusion>
					<!-- edu.ucar:jj2000:5.3 not available in standard repos -->
					<groupId>edu.ucar</groupId>
					<artifactId>jj2000</artifactId>
				</exclusion>
			</exclusions>
		</dependency>


		<!-- From here, in fact, later version, but earlier xerces than we need -->
		<dependency>
			<groupId>com.syncthemall</groupId>
			<artifactId>boilerpipe</artifactId>
			<version>1.2.2</version>
			<exclusions>
				<exclusion>
					<groupId>xerces</groupId>
					<artifactId>xercesImpl</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- Use older version of edu.ucar:jj2000 -->
		<dependency>
			<groupId>edu.ucar</groupId>
			<artifactId>jj2000</artifactId>
			<version>5.2</version>
		</dependency>

		<!-- osgi : -->
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<scope>provided</scope>
		</dependency>

	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-luaj-jse</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.luaj</groupId>
									<artifactId>luaj-jse</artifactId>
									<version>3.0.1</version>
									<outputDirectory>
										${project.build.directory}/luajjse
									</outputDirectory>
									<includes>*</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>unpack-jj2000</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>edu.ucar</groupId>
									<artifactId>jj2000</artifactId>
									<version>5.2</version>
									<outputDirectory>
										${project.build.directory}/jj2000
									</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<!-- Remove classes from the root package and re jar -->
						<id>fix-luaj-jse</id>
						<phase>process-classes</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete>
									<fileset dir="${project.build.directory}/luajjse"
										includes="*.class" />
								</delete>
								<jar
									destfile="${project.build.directory}/luaj-jse-3.0.1.jar">
									<fileset dir="${project.build.directory}/luajjse" />
								</jar>
							</tasks>
						</configuration>
					</execution>
					<execution>
						<!-- Remove classes from the root package and re jar -->
						<id>fix-jj2000</id>
						<phase>process-classes</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete>
									<fileset dir="${project.build.directory}/jj2000"
										includes="*.class" />
								</delete>
								<jar
									destfile="${project.build.directory}/jj2000-5.2.jar">
									<fileset dir="${project.build.directory}/jj2000" />
								</jar>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.artifactId}</Bundle-Name>
						<Bundle-Version>${project.version}</Bundle-Version>

						<Bundle-ClassPath>.,{maven-dependencies}</Bundle-ClassPath>
						<Include-Resource>{maven-resources},{maven-dependencies}</Include-Resource>

						<!-- <Bundle-Activator>org.pcu.connectors.collectors.filesystem.PcuFilesystemCollector</Bundle-Activator> -->
						<!-- <Import-Package>com.norconex.collectors</Import-Package> -->
						<!-- <Export-Package>my.test</Export-Package> -->
						<!-- <Import-Package>*;resolution:=optional</Import-Package> -->
						<!-- <Export-Package>org.pcu.connectors.collectors.filesystem</Export-Package> -->
						<Embed-Dependency>*;scope=compile|runtime;inline=false;artifactId=!org.osgi.framework|!org.pcu.connectors.collectors.api</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>

