{
  "settings": {
    "index.mapping.total_fields.limit": 2000,
    "analysis": {
      "analyzer": {
        "pcu_file_path": {
          "tokenizer": "pcu_file_path"
        }
      },
      "tokenizer": {
        "pcu_file_path": {
          "type": "path_hierarchy"
        }
      }
    }
  },
  "mappings": {
    "file": {
      "properties" : {
         /* NOT type, id, version */
         "version_global" : {
           "type" : "long"
         },
         /*"version_local" : {
           "type" : "long"
         },*/
         "crawl_id" : {
           "type" : "keyword"
         },
         "synced" : {
           "type" : "date",
           "format" : "date_time"/* yyyy-MM-dd'T'HH:mm:ss.SSSZZ */
         },
        "connector_computer_id" : {
          "type" : "binary",
          "doc_values": false
        },
        "file" : {
          "properties" : {
            "last_modified" : {
              "type" : "date",
              "format" : "date_time"/* yyyy-MM-dd'T'HH:mm:ss.SSSZZ */
            },
            "name" : {
              "type" : "keyword"/* ?? */
            },
            "path" : {
              "type" : "keyword",
              "fields": {
                "tree": {
                  "type" : "text",
                  "analyzer": "pcu_file_path", /* or not this one ? */
                  "fielddata": true
                }
              }
            }/*,
            "extension" : {
              "type" : "keyword"
            },
            "group" : {
              "type" : "keyword"
            },
            "owner" : {
              "type" : "keyword"
            }*/
          }
        },
        "http" : {
          "properties" : {
            "url" : {
              "type" : "keyword",
              "index" : false
            },
            "mimetype" : {
              "type" : "keyword"
            }
          }
        },
        "content" : {
          "properties" : {
            "length" : {
              "type" : "long"
            },
            "hash": {
              "type": "keyword"
            },
            "stored_path" : {
              "type" : "keyword" /* or pcu_file_path analyzer, or stored_path analyzer ?? */
            }/*,
            "indexed_chars" : {
              "type" : "long"
            }*/
          }
        },
        "meta" : {
          "properties" : {
            "author" : {
              "type" : "text"
            },
            "date" : {
              "type" : "date",
              "format" : "date_time"
            },
            "keywords" : {
              "type" : "text"
            },
            "title" : {
              "type" : "text"
            },
            "language" : {
              "type" : "keyword"
            },
            "format" : {
              "type" : "text"
            },
            "identifier" : {
              "type" : "text"
            },
            "contributor" : {
              "type" : "text"
            },
            "coverage" : {
              "type" : "text"
            },
            "modifier" : {
              "type" : "text"
            },
            "creator_tool" : {
              "type" : "keyword"
            },
            "publisher" : {
              "type" : "text"
            },
            "relation" : {
              "type" : "text"
            },
            "rights" : {
              "type" : "text"
            },
            "source" : {
              "type" : "text"
            },
            "type" : {
              "type" : "text"
            },
            "description" : {
              "type" : "text"
            },
            "created" : {
              "type" : "date",
              "format" : "date_time"
            },
            "print_date" : {
              "type" : "date",
              "format" : "date_time"
            },
            "metadata_date" : {
              "type" : "date",
              "format" : "date_time"
            },
            "latitude" : {
              "type" : "text"
            },
            "longitude" : {
              "type" : "text"
            },
            "altitude" : {
              "type" : "text"
            },
            "rating" : {
              "type" : "byte"
            },
            "comments" : {
              "type" : "text"
            }
          }
        },
        "fulltext" : {
          "type" : "text"
        },
	     "path" : {
	       "type" : "keyword",
	       "fields": {
	         "tree": {
	           "type" : "text",
	           "analyzer": "pcu_file_path",
            "fielddata": true
	         }
	       }
	     },
	     "readable_path" : {
	       "type" : "keyword",
	       "fields": {
	         "tree": {
	           "type" : "text",
	           "analyzer": "pcu_file_path",
	           "fielddata": true
	         }
	       }
	     },
        "rights" : {
          "properties" : {
            "r" : {
              "type" : "keyword"
            },
            "w" : {
              "type" : "keyword"
            },
            "o" : {
              "type" : "keyword"
            },
            "ar" : {
              "type" : "keyword"
            }
          }
        }
      }
    }
  }
}
